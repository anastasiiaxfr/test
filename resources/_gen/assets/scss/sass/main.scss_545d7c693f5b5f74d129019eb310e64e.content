*,*::after,*::before{margin:0;padding:0;box-sizing:inherit}html{font-size:62.5%;background-color:#ddd}body{box-sizing:border-box}body{font-family:roboto,sans-serif;font-weight:300;line-height:1.7;font-size:1.12rem;color:#666}.menu{display:flex}.menu__wrap{display:flex;align-items:center;background:#0167bb;color:#fff;height:50px}.menu__collapse{display:flex}.menu__mob-collapse{display:flex}.menu__item{position:relative;display:inline-flex;height:50px;list-style-type:none;padding:10px 0;transition:.5s ease-in-out all}.menu__item:nth-child(2) .menu__link{border-left:1px solid #0159a2}.menu__item:last-of-type .menu__link{border-right:none}.menu__item:first-of-type .menu__link{border:none}.menu__item.active{background-color:#ef5d2c}.menu__item:hover{background-color:#ef5d2c}.menu__item:hover .menu__link{border-color:transparent}.menu__item:hover .menu-sub{display:block}.menu__item:hover .menu__toggle{transform:rotate(-90deg)translateY(10px)}.menu__link{display:flex;align-items:center;padding:4px 20px;color:inherit;border-right:1px solid #0159a2;text-decoration:none;font-weight:700;line-height:1}.menu__link .icon{margin-right:10px}.menu__toggle{transform:rotate(90deg)translateY(-10px)}.menu__toggle .icon{margin:0}.menu__badge{display:block;padding:3px 8px;margin:0 5px;border-radius:20px;background-color:#e6e6e6;text-transform:uppercase;font-size:8px}.menu__badge--new{background-color:#50ac56;color:#fff}.menu__badge--top{background-color:#666;color:#fff}.menu-inner{position:absolute;left:100%;top:0%;width:calc(100vw - 800px);padding:30px;background-color:#fff;border:1px solid #f5f5f5;box-shadow:0 0 10px 1px rgba(0,0,0,.1);display:none}.menu-inner__caption{display:flex;font-weight:700}.menu-inner__link{text-decoration:none;color:#000}.menu-inner table{width:100%}.menu-inner table td{vertical-align:top}.menu-inner ul{list-style-type:none}.menu-inner nav{margin:10px}.menu-sub{position:absolute;top:100%;width:280px;background:#fff;color:#000;box-shadow:0 0 10px 1px rgba(0,0,0,